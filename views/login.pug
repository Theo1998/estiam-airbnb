extends layout
block content
  h2 Connexion
    br
    br
    form.form-horizontal(action='/api/auth/login', method='POST') 
     .form-group

       label.form-label(for='email') Email
       input#email.form-input(type='email', name='email', placeholder='Saisissez votre email')
       br

       label.form-label(for='password') Password
       input#password.form-input(type='password', name='password', placeholder='Saisissez une description') 
       br

    
     button.btn.btn-success(type="submit") Connexion 
     a.btn.btn-primary(href='/api/auth/signup' role='button') Inscription 
     a.btn.btn-primary(href='/api/place' role='button') Retour
