extends layout
block content
  h2 Ajouter une location
    br
    br
    form.form-horizontal(action=`/api/place/update/${place.id}`, method='POST') 
     .form-group

       label.form-label(for='name') Nom 
       input#name.form-input(type='text', name='name', placeholder='Saisissez un nom', value=place.name)
       br

       label.form-label(for='description') Description 
       input#description.form-input(type='text', name='description', placeholder='Saisissez une description', value=place.description) 
       br

       label.form-label(for='rooms') Nombre de pièces 
       input#rooms.form-input(type='text', name='rooms', placeholder='Saisissez un nombre de pièce', value=place.rooms) 
       br

       label.form-label(for='bathrooms') Nombre de SDB 
       input#bathrooms.form-input(type='text', name='bathrooms', placeholder='Saisissez un nombre de SDB', value=place.bathrooms) 
       br

       label.form-label(for='max_guests') Nombre max. d'invités 
       input#max_guests.form-input(type='text', name='max_guests', placeholder='Saisissez un nombre de personnes max', value=place.max_guests) 
       br

       label.form-label(for='price_by_night') Tarif / nuit (€) 
       input#price_by_night.form-input(type='text', name='price_by_night', placeholder='Saisissez un tarif', value=place.price_by_night) 
       br

     a.btn.btn-primary(href='/api/place' role='button') Retour
     button.btn.btn-success(type="submit") Modifier
